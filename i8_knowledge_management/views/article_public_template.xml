<odoo>
    <template id="article_public_template" name="Public Article View">
        <t t-call="website.layout">
            <div class="container mt-4">
                <h1 t-esc="article.name"/>
                <div class="text-muted mb-2">
                    Created by <t t-esc="article.create_uid.name"/> Â·
                    <t t-esc="article.create_date.strftime('%d %b %Y %I:%M %p')"/>
                </div>
                <hr/>
                <div t-raw="article.content"/>
            </div>
        </t>
    </template>
</odoo>
