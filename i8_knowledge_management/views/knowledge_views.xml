<odoo>
    <!-- Client Action for Split View -->
    <record id="action_knowledge_split" model="ir.actions.client">
        <field name="name">Knowledge Workspace</field>
        <field name="tag">knowledge_split_client</field>
    </record>

    <record id="view_knowledge_article_tree" model="ir.ui.view">
        <field name="name">knowledge.article.tree</field>
        <field name="model">knowledge.article</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="parent_id"/>
                <field name="author_id"/>
                <field name="is_published"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <record id="view_knowledge_article_form" model="ir.ui.view">
        <field name="name">knowledge.article.form</field>
        <field name="model">knowledge.article</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <form string="Knowledge Article">
                <header>
                    <button name="%(action_knowledge_split)d"
                            type="action"
                            string="Open in Workspace"
                            class="oe_highlight"/>
                    <button type="object"
                            name="action_view_versions"
                            string="Versions"
                            class="oe_stat_button"
                            icon="fa-history"
                            invisible="not version_ids">
                        <field name="version_ids" widget="statinfo" string="Versions"/>
                    </button>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="parent_id" options="{'no_create': True}" domain="[('id', '!=', id)]"/>
                        </group>
                        <group>
                            <field name="tag_ids" widget="many2many_tags"/>
                            <field name="is_published"/>
                            <field name="version" readonly="1"/>
                        </group>
                    </group>
                    <group name="access_rights" string="Access Rights">
                        <group string="Who Can View">
                            <field name="view_everyone"/>
                            <field name="view_user_ids" widget="many2many_tags" options="{'no_create': True}"
                                   context="{'default_active': True}" invisible="view_everyone"/>
                            <field name="view_department_ids" widget="many2many_tags" options="{'no_create': True}"
                                   context="{'default_active': True}" invisible="view_everyone"/>
                        </group>
                        <group string="Who Can Edit">
                            <field name="edit_everyone"/>
                            <field name="edit_user_ids" widget="many2many_tags" options="{'no_create': True}"
                                   context="{'default_active': True}" invisible="edit_everyone"/>
                            <field name="edit_department_ids" widget="many2many_tags" options="{'no_create': True}"
                                   context="{'default_active': True}" invisible="edit_everyone"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Content">
                            <field name="content"/>
                        </page>
                        <page string="Attachments">
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </page>
                        <!--<page string="Access">
                            <field name="editor_ids" widget="many2many_tags"/>
                            <field name="viewer_ids" widget="many2many_tags"/>
                        </page>-->
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
                <footer>
                    <button string="Save" type="object" name="write" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="view_knowledge_article_version_tree" model="ir.ui.view">
        <field name="name">knowledge.article.version.tree</field>
        <field name="model">knowledge.article.version</field>
        <field name="arch" type="xml">
            <tree string="Article Versions" default_order="create_date desc"
                  multi_edit="false" create="false">
                <field name="version_number"/>
                <field name="article_id"/>
                <field name="user_id"/>
                <field name="create_date"/>
                <button name="action_compare_with_current"
                        string="Compare"
                        type="object"
                        icon="fa-exchange-alt"
                        class="btn-link"/>
            </tree>
        </field>
    </record>

    <record id="view_knowledge_article_version_form" model="ir.ui.view">
        <field name="name">knowledge.article.version.form</field>
        <field name="model">knowledge.article.version</field>
        <field name="arch" type="xml">
            <form string="Article Version" create="false">
                <header>
                    <button name="action_compare_with_current"
                            type="object"
                            string="Compare with Current"
                            class="btn-secondary"/>
                </header>
                <sheet>
                    <group>
                        <field name="version_number"/>
                        <field name="user_id"/>
                        <field name="create_date"/>
                    </group>
                    <field name="content" widget="html"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_knowledge_version_compare_wizard_form" model="ir.ui.view">
        <field name="name">knowledge.version.compare.wizard.form</field>
        <field name="model">knowledge.version.compare.wizard</field>
        <field name="arch" type="xml">
            <form string="Compare Versions">
                <group>
                    <field name="old_version_id" readonly="1"/>
                    <field name="current_version_id" readonly="1"/>
                </group>
                <notebook>
                    <page string="Old Version">
                        <field name="old_content" widget="html" readonly="1"/>
                    </page>
                    <page string="Current Version">
                        <field name="current_content" widget="html" readonly="1"/>
                    </page>
                    <page string="Difference">
                        <field name="diff_html" widget="html" readonly="1"/>
                    </page>
                </notebook>
                <footer>
                    <button string="Close" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="view_knowledge_article_content_only_form" model="ir.ui.view">
        <field name="name">knowledge.article.content.only.form</field>
        <field name="model">knowledge.article</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <form string="Edit: ${context.default_name or 'Content'}"
                  create="false" edit="true" toolbar="false" class="article-popup modal-xl">
                <sheet>
                    <field name="content" widget="html"/>
                </sheet>
            </form>
        </field>
    </record>

</odoo>