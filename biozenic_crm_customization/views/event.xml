<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_event_form_inherit" model="ir.ui.view">
        <field name="name">event.event.form.inherit</field>
        <field name="model">event.event</field>
        <field name="inherit_id" ref="event.view_event_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='date_begin']" position="before">
                <field name="event_status"/>
                <field name="partner_id"/>
            </xpath>

            <xpath expr="//field[@name='event_type_id']" position="after">
                <br/>
                <field name="final_count" string="Final Count (2 Week Notice)"/>
                <field name="total_cost" string="Total Cost"/>
            </xpath>


            <xpath expr="//label[@for='is_multi_slots']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='is_multi_slots']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='lang']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='event_type_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>


            <xpath expr="//field[@name='event_url']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//label[@for='seats_limited']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='seats_limited']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>


            <xpath expr="//form/sheet/notebook/page[@name='tickets']"  position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//form/sheet/notebook/page[@name='event_communication']"  position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//form/sheet/notebook/page[@name='questions']"  position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//form/sheet/notebook/page[@name='event_notes']"  position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//form/sheet/notebook/page[@name='event_notes']" position="after">
                <page string="Event Details" name="event_details">
                    <group>
                        <group>
                            <field name="event_date"/>
                            <field name="event_time"/>
                            <field name="event_location"/>
                            <field name="event_poc"/>
                            <field name="event_type"/>
                            <field name="head_count"/>
                            <field name="biozenic_staff"/>
                            <field name="eta_setup"/>
                        </group>

                        <group>
                            <field name="event_materials"/>
                            <field name="plants"/>
                            <field name="planters_pots"/>
                            <field name="soil"/>
                            <field name="perlite"/>
                            <field name="moss"/>
                            <field name="other_materials"/>
                            <field name="folding_tables"/>
                            <field name="floor_covering"/>
                            <field name="tablecloths"/>
                            <field name="mini_shovels"/>
                            <field name="table_decor"/>
                            <field name="broom_dustpan"/>
                            <field name="garden_gloves"/>
                            <field name="liner_trays"/>
                            <field name="clear_bucket"/>
                            <field name="liner"/>
                            <field name="plant_care"/>
                            <field name="business_cards"/>
                        </group>
                    </group>
                </page>

                <page string="Administrative Checklist" name="admin_checklist">
                    <group>
                        <group>
                            <field name="is_workshop_confirmation"/>
                            <field name="is_qr_printing"/>
                            <field name="is_workshop_printing"/>
                            <field name="is_guide_client"/>
                        </group>
                    </group>
                </page>
            </xpath>

        </field>
    </record>


    <record id="event_event_view_form_inherit" model="ir.ui.view">
        <field name="name">event.event.form.inherit.website_event</field>
        <field name="model">event.event</field>
        <field name="inherit_id" ref="website_event.event_event_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//label[@for='website_menu']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='website_menu']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='website_id'][2]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

        </field>
    </record>

</odoo>
