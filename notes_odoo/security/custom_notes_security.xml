<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data noupdate="1">


	<record id="custom_note_all_user" model="ir.rule">
        <field name="name">Note - Admin Rule</field>
        <field name="model_id" ref="model_custom_note"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('base.group_system'))]"/>
    </record>


 	<record id="custom_user_rule_see_notes" model="ir.rule">
        <field name="name">Note - User Wise Rule</field>
        <field name="model_id" ref="model_custom_note"/>
        <field name="domain_force">[('custom_user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>



    <record model="ir.rule" id="custom_note_comp_rule">
        <field name="name">Notes - Multi Company Rule</field>
        <field name="model_id" ref="model_custom_note"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
    </record>

    <record model="ir.rule" id="custom_note_public_rule">
        <field name="name">Notes Custom: employees: following required for follower-only Notes</field>
        <field name="model_id" ref="model_custom_note"/>
        <field name="domain_force">[
        ('custom_is_public', '=', True),
        ('message_partner_ids', 'in', [user.partner_id.id])]
        </field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="perm_unlink" eval="False"/>
    </record>

</data>
</odoo>