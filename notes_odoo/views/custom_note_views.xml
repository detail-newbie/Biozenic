<?xml version="1.0" encoding="utf-8"?>
<odoo>
      <!-- Note Form View -->
    <record id="custom_note_form_view" model="ir.ui.view">
        <field name="name">custom.note.form</field>
        <field name="model">custom.note</field>
        <field name="arch" type="xml">
            <form string="Activity">
                <header>
                    <field name="custom_stage_id"  widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" widget="char"/>
                            <field name="custom_tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" placeholder="Tags"/>
                        </group>
                        <group>
                            <field name="custom_user_id"/>
                            <field name="custom_is_public"/>
                            <field name="company_id" invisible="1" groups="base.group_multi_company"/>
                        </group>
                    </group>
                        <field name="description" type="html" class="oe_description" default_focus="1" style="height: 400px;" options="{'resizable': false, 'collaborative': true}"/>
                </sheet>
                <chatter/>
                <!-- <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div> -->
            </form>
        </field>
    </record>



    <!--Note Kanban View -->
    <record id="custom_note_kanban_view" model="ir.ui.view">
        <field name="name">custom.note.kanban</field>
        <field name="model">custom.note</field>
        <field name="arch" type="xml">
        <kanban default_group_by="custom_stage_id" class="oe_notes oe_kanban_quickcreate_textarea o_kanban_small_column">
            <field name="name"/>
            <field name="custom_stage_id"/>
            <field name="description"/>
            <templates>
                <!-- <t t-name="kanban-box"> -->
                <t t-name="card">
                <div t-attf-class="oe_kanban_content oe_kanban_global_click">    <div>
                        <strong class="o_kanban_record_title">
                        <span><field name="name"/></span></strong>
                    </div>
                    <div>
                        <strong class="o_kanban_record_title">
                        <span class=" badge rounded-pill text-bg-info"><field name="custom_stage_id"/></span></strong>
                    </div>   
                </div>              
                </t>                          
            </templates>
        </kanban>
        </field>
    </record>

    <!-- Note List View -->
    <record id="custom_note_tree_view" model="ir.ui.view">
        <field name="name">custom.note.list</field>
        <field name="model">custom.note</field>
        <field name="arch" type="xml">
        <list string="Service Checklist">
            <field name="name"/>
            <field name="custom_stage_id"/>
            <field name="custom_tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
        </list>
        </field>
    </record>

 

    <!-- Search note  -->
    <record id="custom_note_search_view" model="ir.ui.view">
        <field name="name">custom.note.search</field>
        <field name="model">custom.note</field>
        <field name="arch" type="xml">
        <search string="Notes">
            <field name="description" string="description"/>
            <field name="custom_tag_ids"/>
            <group>
            <filter string="Stage" name="stage" context="{'group_by':'custom_stage_id'}"/>
                <group>
                    <filter name="custom_tag_ids" string="Tags"/>
                </group>
            </group>
        </search>
        </field>
    </record>

    <record model="ir.ui.view" id="custom_note_activity_view">
        <field name="name">custom.note.activity.view</field>
        <field name="model">custom.note</field>
        <field name="arch" type="xml"> 
        <activity string="custom notes">
        <field name="name"/>
        <templates>
            <div t-name="activity-box">
            <div>
            <field name="name" display="full"/>
            </div>
            </div>
        </templates>
        </activity>      
        </field>
    </record>

    <!-- Note Action -->
    <record id="action_custom_note" model="ir.actions.act_window">
      <field name="name">Notes</field>
      <field name="res_model">custom.note</field>
      <field name="view_mode">kanban,list,form,activity</field>
    </record>

    <menuitem id="menu_custom_note_notes" name="Service Checklist" sequence="15" action="action_custom_note">
    </menuitem>

</odoo>
