<?xml version="1.0" encoding="utf-8"?>
<odoo>
   
    <!-- Note Tag Form View -->
    <record id="custom_note_tag_form_view" model="ir.ui.view">
      <field name="name">custom.note.tag.form</field>
      <field name="model">custom.note.tag</field>
      <field name="arch" type="xml">
        <form string="Tags">
          <group>
            <field name="name"/>
            <field name="color" widget="color_picker"/>
            <field name="active" invisible="1"/>
          </group>
        </form>
      </field>
    </record>

    <!-- Note Tag List View -->
    <record id="custom_note_tag_tree_view" model="ir.ui.view">
      <field name="name">custom.note.tag.list</field>
      <field name="model">custom.note.tag</field>
      <field name="arch" type="xml">
        <list string="Tags" editable="bottom">
            <field name="name"/>
            <field name="color" widget="color_picker" optional="show"/>
        </list>
      </field>
    </record>

    <!-- Note Tag Action -->
    <record id="custom_note_tag_action" model="ir.actions.act_window">
      <field name="name">Tags</field>
      <field name="res_model">custom.note.tag</field>
      <field name="view_mode">list,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Add a new tag
        </p>
      </field>
    </record>

      <menuitem
        id="custom_notes_tag_menu"
        parent="custom_menu_note_configuration"
        name="Tags"
        action="custom_note_tag_action"
        sequence="17"
        groups="base.group_system"/>
</odoo>