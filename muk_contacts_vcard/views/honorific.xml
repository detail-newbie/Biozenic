<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
	
	<record id="view_honorific_list" model="ir.ui.view">
	    <field name="name">muk_contacts_vcard.honorific.list</field>
	    <field name="model">muk_contacts_vcard.honorific</field>
	    <field name="arch" type="xml">
	        <list editable="bottom" sample="1">
				<field name="sequence" widget="handle"/>
	            <field name="name"/>
	            <field name="shortcut"/>
                <field name="position"/>
	        </list>
	    </field>
	</record>
	
	<record id="view_honorific_form" model="ir.ui.view">
	    <field name="name">muk_contacts_vcard.honorific.form</field>
	    <field name="model">muk_contacts_vcard.honorific</field>
	    <field name="arch" type="xml">
	        <form>
	            <sheet>
	                <group>
						<group>
							<field name="name"/>
							<field name="shortcut"/>
						</group>
						<group>
							<field name="position"/>
						</group>
	                </group>
	            </sheet>
	        </form>
	    </field>
	</record>
	
	<record id="action_honorific_contact" model="ir.actions.act_window">
	    <field name="name">Honorifics</field>
	    <field name="type">ir.actions.act_window</field>
	    <field name="res_model">muk_contacts_vcard.honorific</field>
	    <field name="help" type="html">
	        <p class="o_view_nocontent_smiling_face">
	            Create a Honorific
	        </p>
	    </field>
	</record>
       
</odoo>
