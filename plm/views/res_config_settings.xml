<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_plm_settings" model="ir.ui.view">
            <field name="name">plm settings</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <app data-string="plm" string="plm" name="plm" logo="/plm/static/description/icon.png"
                         groups="plm.group_plm_admin">
                        <block title="Product" name="plm_product" groups="plm.group_plm_admin">
                            <setting
                                help="Compute product weight due to Normal BOM calculation, using CAD weight or setting a custom weight.">
                                <field name="module_plm_automatic_weight"/>
                            </setting>
                            <setting
                                help="Use translations in product description providing also a view to manage plm description translations.">
                                <field name="module_plm_product_description_language_helper"/>
                            </setting>
                            <setting help="Revise a product / plm document from the web interface.">
                                <field name="module_plm_web_revision"/>
                            </setting>
                            <setting>
                                <field name="module_plm_auto_internalref"/>
                            </setting>
                            <setting help="Manage product Suspension State on workFlow for document and product.">
                                <field name="module_plm_suspended"/>
                            </setting>
                            <setting help="Generate Engineering Code by sequence.">
                                <field name="module_plm_auto_engcode"/>
                            </setting>
                            <setting help="Manage breakage on your products.">
                                <field name="module_plm_breakages"/>
                            </setting>
                            <setting help="Create breakages directly from Ticket module.only for Enterprise Edition">
                                <field name="module_plm_ent_breakages_helpdesk"/>
                            </setting>
                        </block>
                        <block title="Document" name="plm_document" groups="plm.group_plm_admin">
                            <setting help="Allow converting files in different format. In order to make it run you will
                             need the conversion server provided by OmniaSolutions.">
                                <field name="module_plm_automated_convertion"/>
                                <input type="submit" value="More Info" class="oe_button form-control"
                                       onclick="window.location.href='http://www.omniasolutions.website/page/plm-convertion-server'"/>
                            </setting>
                            <setting help="Advanced linking and organise your document with virtual box.">
                                <field name="module_plm_box"/>
                                <input type="submit" value="More Info" class="oe_button form-control"
                                       onclick="window.location.href='http://www.omniasolutions.eu/page/plm-box'"/>
                            </setting>
                            <setting help="Advanced way to save and synchronise PLM document to improve open and save
                            operation for pour connection bandwidth To make it work you need to install a file server
                            application mirror_document_server.">
                                <field name="module_plm_document_multi_site"/>
                                <input type="submit" value="More Info" class="oe_button form-control"
                                       onclick="window.location.href='http://www.omniasolutions.website'"/>
                            </setting>
                        </block>
                        <block title="BOM" name="plm_bom" groups="plm.group_plm_admin">
                            <setting help="Automate the creation of normal B.O.M. with scheduled action.">
                                <field name="module_plm_automate_normal_bom"/>
                            </setting>
                            <setting help="Compare two B.O.M from the B.O.M tree interface.">
                                <field name="module_plm_compare_bom"/>
                            </setting>
                            <setting help="Upload summarised B.O.M. from client application.">
                                <field name="module_plm_bom_summarize"/>
                            </setting>
                            <setting help="Allows view and/or update obsoleted components in a Normal Bill Of Materials
                            using released components.">
                                <field name="module_plm_date_bom"/>
                            </setting>
                            <setting help="This module allows you to improve the capability of your OdooPLM for managing
                             the cut parts.">
                                <field name="module_plm_cutted_parts"/>
                            </setting>
                            <setting>
                                <field name="module_plm_engineering"/>
                            </setting>
                            <setting>
                                <field name="module_plm_spare"/>
                            </setting>
                        </block>
                        <block title="Project" name="plm_project" groups="plm.group_plm_admin">
                            <setting help="Add a progress bar to check the progress of the project based
                            on the status of the products.">
                                <field name="module_plm_project"/>
                            </setting>
                        </block>
                        <block title="Manufacturing" name="plm_manufacturing" groups="plm.group_plm_admin">
                            <setting help="Add the capability to use the PDF PLM document inside work order
                            ATTENTION !! This module work only for enterprise version because the
                            mrp_workorder is in the enterprise version.">
                                <field name="module_plm_pdf_workorder"/>
                            </setting>
                            <setting help="Allow to select only product that have engineering_code
                             and is in the latest revision for Manufacturing.">
                                <field name="module_plm_product_only_latest"/>
                            </setting>
                            <!-- <setting help="Add the capability to update the manufacturing order from a revised BOM
                             **** ATTENTION **** This module depends on plm_mrp_bom_update from:
                            git clone -b 16.0 https://github.com/OmniaSolutions/odooAddons.git.">
                                <field name="module_plm_mrp_bom_update"/>
                            </setting> -->
                        </block>
                        <block title="Sales" name="plm_sales" groups="plm.group_plm_admin">
                            <setting help="This module adds permissions to sale module allowing
                            some PLM procedures to work better.">
                                <field name="module_plm_sale_fix"/>
                            </setting>
                            <setting help="This module adds the capability to use the 3D
                             WebGL inside your product and E-Commerce">
                                <field name="module_plm_web_3d_sale"/>
                            </setting>
                            <setting help="Allow to select only product that have not
                             engineering_code or is in the latest revision for Purchase">
                                <field name="module_plm_sale_only_latest"/>
                            </setting>
                        </block>
                        <block title="Purchase" name="plm_purchase" groups="plm.group_plm_admin">

                            <setting help="Allow to select only product that have
                            engineering_code and is in the latest revision for Purchase.">
                                <field name="module_plm_purchase_only_latest"/>
                            </setting>
                        </block>
                        <block title="Client" name="plm_client" groups="plm.group_plm_admin">
                            <setting>
                                <field name="module_plm_client_customprocedure"/>
                            </setting>
                        </block>
                        <block title="Other" name="plm_other" groups="plm.group_plm_admin">
                            <setting help="Download a zip file containing all documents
                             and printout attached to a product or BOM.">
                                <field name="module_plm_pack_and_go"/>
                            </setting>
                            <setting help="Using a simple wizard interfaces for
                             printing PLM report's in different languages.">
                                <field name="module_plm_report_language_helper"/>
                            </setting>
                            <setting help="This Module extend the capability of the activity
                             adding a workflow and validation process similar to the EC0/ECR.">
                                <field name="module_activity_validation"/>
                            </setting>
                            <setting help="This Module extend the capability of the standard
                             automated action based on the workflow action.">
                                <field name="module_plm_workflow_custom_action"/>
                            </setting>
                            <setting help="extend the plm module adding support for the WebGl 3d Environment.">
                                <field name="module_plm_web_3d"/>
                            </setting>
                            <setting help=" Enable or Disable Template Consumption Plans.">
                                <field name="install_consumption_plan_feature"/>
                            </setting>
                        </block>
                    </app>
                </xpath>
            </field>
        </record>

        <record id="view_groups_search_inherited" model="ir.ui.view">
            <field name="name">res.groups.search</field>
            <field name="model">res.groups</field>
            <field name="inherit_id" ref="base.view_groups_search"/>
            <field name="arch" type="xml">
                <xpath expr="//search[string('Groups')]" position="inside">

                </xpath>
            </field>
        </record>

        <record id="plm_action_res_groups" model="ir.actions.act_window">
            <field name="name">Groups</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.groups</field>
            <field name="domain">["|", ("full_name", "ilike", "plm"), ("privilege_id", "ilike", "plm")]</field>
        </record>

        <record id="plm_action_settings_form" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{'module': 'plm'}</field>
        </record>


    </data>
    <data noupdate="1">

        <record id="action_update_doc_type" model="ir.actions.server">
            <field name="name">Recompute Doc Type</field>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="model_id" ref="base.model_ir_attachment"/>
            <field name="code">records._compute_document_type()</field>
        </record>

    </data>
</odoo>
