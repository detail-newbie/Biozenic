<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-inherit="web.ListRenderer" t-inherit-mode="extension">
        <xpath expr="//t[@t-if=&quot;column.hasLabel and column.widget !== 'handle'&quot;]" position="after">
             <t t-elif="column.labelIcon">
                 <div
                    class="d-flex align-items-center"
                    t-att-data-tooltip-template="isDebugMode ? 'web.FieldTooltip' : 'web.ListHeaderTooltip'"
                    t-att-data-tooltip-info="makeTooltip(column)"
                 >
                    <span
                        class="d-block min-w-0 flex-grow-1 flex-shrink-1 text-center"
                        t-att-class="column.labelIcon"
                    />
                </div>
             </t>
        </xpath>
    </t>

</templates>
