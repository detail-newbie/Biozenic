<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_res_config_settings_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='user_default_rights']" position="inside">
                <setting help="Disable the Quick Create Feature for Many2one fields" groups="base.group_no_one">
                    <field name="disable_many2one_quick_create" string="Disable Quick Create"/>
                </setting>
            </xpath>
        </field>
    </record>

</odoo>
